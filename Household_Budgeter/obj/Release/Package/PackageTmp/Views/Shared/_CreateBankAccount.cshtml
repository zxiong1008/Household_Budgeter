@model Household_Budgeter.Models.BankAccount

@{
    ViewBag.Title = "Create";
}

<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            <h3>Add A New Bank Account</h3>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Create", "BankAccounts"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <strong>Account Name</strong>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Example: Checkings, Savings, Certificates of Deposit, and etc."} })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "control-label col-md-2"})
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon">$</span>
                            @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control", @placeholder = "00.00" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">
                        <strong>Initial Balance</strong>
                    </div>
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon">$</span>
                            @Html.EditorFor(model => model.InitialBalance, new { htmlAttributes = new { @class = "form-control", @placeholder = "00.00" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.InitialBalance, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>