@model Household_Budgeter.Models.Budget

@{
    ViewBag.Title = "Edit";
}
<div class="panel panel-success">
    <div class="panel-heading"><h2>Edit Budget</h2></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Household.Name)
            <h4>@Model.Household.Name</h4>
            <div class="form-horizontal">
               <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            <a href="@Url.Action("Index")" class="btn btn-primary"> << Back to Buget</a>
        </div>

    </div>
</div>


