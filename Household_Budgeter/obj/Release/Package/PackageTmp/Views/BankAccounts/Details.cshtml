@model Household_Budgeter.Models.BankAccount

@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.Title</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InitialBalance)
            </th>
            <th>
                Warning Balance
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReconcileBalance)
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.HouseholdId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Name)
            </td>
            <td>
                @Model.Created.ToString("D")
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.InitialBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.WarningBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ReconcileBalance)
            </td>
        </tr>
    </table>

<p class="text-right">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Update", "Update", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
