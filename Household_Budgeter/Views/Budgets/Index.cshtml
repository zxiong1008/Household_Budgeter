@model IEnumerable<Household_Budgeter.Models.Budget>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-6">
        <h2>Budget Index</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Household.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Household.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        <div class="delete-section">
                            <a class="delete-link" href="@Url.Action("Delete", new {id = item.Id})">Delete</a>
                            <div class="btn btn-danger btn-sm delete-confirm" style="display:none" data-delete-id="@item.Id">Confirm Delete</div>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h2>Create</h2>
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#home">Budget</a></li>
            <li><a data-toggle="tab" href="#menu1">BudgetItem</a></li>
            <li><a data-toggle="tab" href="#menu2">Categories</a></li>
        </ul>
        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                @Html.Action("Create")
            </div>
            <div id="menu1" class="tab-pane fade">
                @Html.Action("Create", "BudgetItems")
            </div>
            <div id="menu2" class="tab-pane fade">
                @Html.Action("Create", "Categories")
            </div>
        </div>
    </div>
</div>