@model IEnumerable<Household_Budgeter.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table" id="categoriesTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <div class="delete-section">
                        <a class="delete-link" href="@Url.Action("Delete", new {id = item.Id})">Delete</a>
                        <div class="btn btn-danger btn-sm delete-confirm" style="display:none" data-delete-id="@item.Id">Confirm Delete</div>
                    </div>
                </td>
            </tr>
        }
    </tbody> 
</table>